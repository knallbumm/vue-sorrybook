{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "types": ["vite/client"],
    "module": "esnext",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist",
    "declarationDir": "dist/types"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/components/**/*.vue"
  ],
  "exclude": ["node_modules", "dist", "test", "sorrybook"]
}
